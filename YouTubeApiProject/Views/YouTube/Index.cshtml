<script>
    // Ensure the script runs when the document is ready
    document.addEventListener("DOMContentLoaded", function () {
        // When the modal is triggered (shown)
        var videoModal = document.getElementById('videoModal');

        videoModal.addEventListener('show.bs.modal', function (event) {
            // The button that triggered the modal
            var button = event.relatedTarget;
            // Extract the videoId from the button's data-videoid attribute
            var videoId = button.getAttribute('data-videoid');

            // Get the iframe element where the video will be played
            var videoIframe = document.getElementById('videoIframe');

            // Set the source of the iframe to the YouTube embed URL with the videoId
            var videoUrl = 'https://www.youtube.com/embed/' + videoId;

            videoIframe.src = videoUrl;
        });

        // Clear the iframe src when the modal is hidden
        videoModal.addEventListener('hide.bs.modal', function () {
            var videoIframe = document.getElementById('videoIframe');
            videoIframe.src = ''; // Clear the video URL when modal is hidden
        });
    });
   
</script>

