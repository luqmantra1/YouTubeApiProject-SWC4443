    }

    /* Search Form Styling */
    form {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 40px;
    }

    form input[type="text"] {
        border-radius: 50px;
        padding: 15px 20px;
        font-size: 18px;
        border: 2px solid #ddd;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 60%;
        background-color: #fff;
    }

    form input[type="text"]:focus {
        border-color: #007bff;
        box-shadow: 0 0 12px rgba(0, 123, 255, 0.25);
        outline: none;
        transform: scale(1.05);
    }

    form button {
        border-radius: 50px;
        padding: 12px 30px;
        font-size: 16px;
        margin-left: 15px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
        background-color: #28a745;
        color: white;
        cursor: pointer;
    }

    form button:hover {
        background-color: #218838;
        transform: scale(1.05);
    }

    /* Video Card Styling */
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #fff;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

            .card:hover img {
                transform: scale(1.05);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            }

    .watch-video-overlay {
        background: linear-gradient(135deg, rgba(0, 123, 255, 0.8), rgba(40, 167, 69, 0.8));
    }

    .video-card:hover .watch-video-overlay {
        opacity: 1;
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.9), rgba(255, 69, 0, 0.9));
    }


    .card img {
        height: 200px;
        object-fit: cover;
        transition: all 0.3s ease;
        width: 100%;
        border-bottom: 2px solid #007bff;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 10px;
        color: #333;
        transition: color 0.3s ease;
    }

    .card-title:hover {
        color: #007bff;
    }

    .card-text {
        font-size: 14px;
        color: #666;
        height: 50px;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-footer {
        background-color: transparent;
        border-top: none;
        padding: 15px;
        display: flex;
        justify-content: center;
    }

    .card-footer a {
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 14px;
        background-color: #007bff;
        color: #fff;
        text-align: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

    .card-footer a:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    /* Loader animation */
    .loader {
    border: 6px solid #f3f3f3;
    border-top: 6px solid #28a745;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 0.8s linear infinite;
}

@@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}


    /* Alert Styling */
    .alert {
        border-radius: 30px;
        background-color: #fff5f5;
        color: #d9534f;
        font-size: 16px;
        padding: 20px;
        text-align: center;
        margin-top: 20px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Responsive Design */
    @@media only screen and (max-width: 768px) {
        form input[type="text"] {
            width: 80%;
        }

        .card img {
            height: 150px;
        }
    }

    @@media only screen and (max-width: 576px) {
        form input[type="text"] {
            width: 100%;
        }

        form button {
            margin-left: 10px;
        }
    }

    /* Card hover overlay styling */
    .video-card {
        position: relative;
    }

    .watch-video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.6);
        opacity: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: opacity 0.3s ease;
        border-radius: 15px;
    }

    .video-card:hover .watch-video-overlay {
