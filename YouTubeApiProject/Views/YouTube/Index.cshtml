<!-- Main Content -->
<div class="container my-5">
    <h2 class="text-center mb-4">Try and search something</h2>
    <form asp-action="Search" method="post" class="d-flex justify-content-center mb-5">
        <input type="text" name="query" placeholder="Search for videos..." class="form-control w-50 shadow-sm" />
        <button type="submit" class="btn btn-outline-dark btn-lg px-4 py-2 fs-5 fw-bolder">Search</button>
    </form>

    <!-- Video Results -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var video in Model)
            {
                <div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm position-relative video-card">
        <img src="@video.ThumbnailUrl" class="card-img-top" alt="@video.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@video.Title</h5>
                            <p class="card-text text-truncate">@video.Description</p>
                            <p class="card-text text-truncate"><strong>Publisher:</strong> @video.Publisher</p> <!-- Display Publisher -->
                        </div>

        <div class="watch-video-overlay">
            <!-- Passing the video ID to data-videoid -->
            <a href="javascript:void(0)" class="watch-video-link" data-videoid="@video.VideoId" data-bs-toggle="modal" data-bs-target="#videoModal">Watch Video</a>
        </div>
    </div>
</div>

            }
        </div>
    }
    else
    {
       @*  <div class="alert alert-info text-center" role="alert">
            Please Type a title and click search ty!.
        </div> *@
    }
</div>


