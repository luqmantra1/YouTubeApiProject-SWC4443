    }

    .watch-video-link {
        color: white;
        font-size: 18px;
        text-decoration: none;
        background-color: #007bff;
        padding: 10px 20px;
        border-radius: 50px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

