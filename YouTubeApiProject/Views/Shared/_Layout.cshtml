<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YouTubeApiProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YouTubeApiProject.styles.css" asp-append-version="true" />

    <!-- Add Font Awesome CDN for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        /* Transparent, smaller sidebar with only icons */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 80px; /* Smaller width */
            background-color: transparent; /* Transparent background */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 10px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 15px;
                width: 60px; /* Make it more compact */
                text-align: center;
                border-radius: 50%;
                transition: background-color 0.3s ease, transform 0.2s ease;
                margin-bottom: 20px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .sidebar a i {
                    font-size: 24px; /* Icon size */
                }

                .sidebar a:hover {
                    background-color: #212529;
                    transform: scale(1.05);
                }

        .content {
            margin-left: 100px; /* Adjusted based on smaller sidebar width */
            padding: 20px;
        }

        /* Mobile responsive sidebar */
        @@media (max-width: 768px) {
            .sidebar {
                width: 60px;
            }

            .content {
                margin-left: 80px;
            }
        }
    </style>
</head>
<body>
    <!-- Side Navigation Bar -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")">
            <i class="fas fa-home"></i> <!-- Font Awesome Home Icon -->
        </a>
        <a href="@Url.Action("", "YouTube")">
            <i class="fas fa-search"></i> <!-- Font Awesome Search Icon -->
        </a>
        <a href="https://developers.google.com/youtube/terms/api-services-terms-of-service">
            <i class="fas fa-file"></i> <!-- Font Awesome Search Icon -->
        </a>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
