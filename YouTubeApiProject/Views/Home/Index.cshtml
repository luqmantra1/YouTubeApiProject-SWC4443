    .custom-profile-img {
        width: 50px; /* Adjust the size of the image */
        height: 50px;
        border-radius: 50%; /* Makes the image round */
        border: 2px solid #fff; /* Optional: Adds a border around the image */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* Optional: Adds a subtle shadow */
        cursor: pointer; /* Adds a pointer cursor on hover */
        object-fit: cover; /* Ensures the image covers the area neatly */
    }

